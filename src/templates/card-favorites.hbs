{{#each this}}
<li class="cards">
    {{!-- <p style="background-color: red;">1-th child of class="cards"</p> --}}
    <div class="foto product-card__img-container" data-category="{{category}}" data-description="{{description}}"
        data-phone="{{phone}}" data-userID="{{userId}}" data-id="{{_id}}" data-title="{{title}}"
        data-images="{{imageUrls}}" data-price="{{price}}">
        {{#each imageUrls}} <img class=" product__image" src="{{this}}" data-sourse="" width="295" height="275"
            alt="photo" />{{/each}}

        <button class="heart-button">
            <span class="material-icons">
                favorite_border
            </span>
        </button>

        <button class="fullscreen-button">
            <span class="material-icons">
                fullscreen
            </span>
        </button>

    </div>

    <div>
        <h3 class="name-st-p">Назва товару{{title}}</h3>
        <div class="price-cont">
            <h3 class="old-price-st-p">1000 грн{{oldPrice}}</h3>
            <h3 class="price-st-p">500 грн{{price}}</h3>
        </div>
    </div>

</li>
{{/each}}